<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learning.travelingassistant.mapper.CityMapper">

    <resultMap id="cityResultMap" type="com.learning.travelingassistant.entity.City">
        <id property="id" column="id"/>
        <result property="provinceId" column="province_id"/>
        <result property="name" column="name"/>
        <result property="adcode" column="adcode"/>
        <result property="description" column="description"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="findByProvinceId" resultMap="cityResultMap">
        SELECT id, province_id, name, adcode, description, create_time
        FROM city
        WHERE province_id = #{provinceId}
        ORDER BY id
    </select>

    <select id="findById" resultMap="cityResultMap">
        SELECT id, province_id, name, adcode, description, create_time
        FROM city
        WHERE id = #{id}
    </select>

</mapper>
